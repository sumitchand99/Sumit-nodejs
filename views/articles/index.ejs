<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Bootstrap 5 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" />
  <style>
    body {
      background-color: #f8f9fa; /* Background color for the entire page */
      font-family: Arial, sans-serif;
    }

    .container {
      margin-top: 50px;
      background-color: #e9ecef; /* Background color for the container */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      color: #333;
      text-align: center;
    }

    .article-card {
      margin-bottom: 40px; /* Increased margin for better separation */
    }

    .card {
      border: none;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease-in-out; /* Add smooth transition */
    }

    .card:hover {
      transform: translateY(-5px); /* Add a slight lift effect on hover */
    }

    .card-body {
      padding: 20px;
    }

    .card-title {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .card-subtitle {
      font-size: 0.9rem;
      color: #6c757d;
      margin-bottom: 10px;
    }

    .card-text {
      margin-bottom: 20px;
    }

    .btn-success {
      background-color: #28a745;
      border-color: #28a745;
      display: block;
      margin: 0 auto; /* Center the button */
      margin-bottom: 20px; /* Add bottom margin */
    }

    .btn-success:hover {
      background-color: #218838;
      border-color: #1e7e34;
    }

    .btn-primary, .btn-info, .btn-danger {
      margin-right: 10px;
    }

    .btn-danger {
      background-color: #dc3545;
      border-color: #dc3545;
    }

    .btn-danger:hover {
      background-color: #c82333;
      border-color: #bd2130;
    }
  </style>
  <title>List Articles</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>

    <div class="row">
      <% articles.forEach(article => { %>
      <div class="col-lg-4 article-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= article.title %></h4>
            <div class="card-subtitle text-muted mb-2">
              <%= article.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2"><%= article.description %></div>
            <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
            <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
            <form
              action="/articles/<%= article.id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
